{# HERO SECTION — dynamic from iihr_slide content type #}
<section class="hero" id="hero">
  <div id="heroSlides" style="display:flex;transition:transform 0.5s ease;width:100%">
    {% for slide in hero_slides %}
    <div class="hero-slide" style="min-width:100%;flex-shrink:0;position:relative">
      <img src="{{ slide.image_url }}" alt="{{ slide.title }}">
      <div class="hero-overlay">
        <div class="hero-text">
          {% if slide.tag %}<span class="hero-tag">{{ slide.tag }}</span>{% endif %}
          <h2>{{ slide.title }}</h2>
          {% if slide.subtitle %}<p>{{ slide.subtitle }}</p>{% endif %}
          {% if slide.hash %}<div class="hero-hash">{{ slide.hash }}</div>{% endif %}
        </div>
      </div>
    </div>
    {% endfor %}
  </div>
  {% if hero_slides|length > 1 %}
  <button class="hero-prev" onclick="heroSlide(-1)" aria-label="Previous slide">‹</button>
  <button class="hero-next" onclick="heroSlide(1)" aria-label="Next slide">›</button>
  <div class="hero-dots">
    {% for i in 0..(hero_slides|length - 1) %}
    <span class="hero-dot{% if i == 0 %} active{% endif %}" onclick="heroGoTo({{ i }})"></span>
    {% endfor %}
  </div>
  {% endif %}
</section>

