      <a href="#" class="div-related-link">Staffs <span class="div-link-arrow">›</span></a>
    </div>

    {# Division Head Card — driven from division_head variable #}
    <div class="div-head-card">
      <div class="div-head-card-title">
        Division Head ( {{ division_content.page_title ?: 'Fruits Crops' }} )
      </div>
      <div class="div-head-card-body">
        <img
          src="{{ division_head.image_url ?: '/themes/custom/iihr_theme/images/dr.jpg' }}"
          alt="{{ division_head.name ?: 'Division Head' }}"
          class="div-head-photo"
          onerror="this.src='/themes/custom/iihr_theme/images/dr.jpg'">
        <div class="div-head-info">
          <div class="div-head-name">{{ division_head.name ?: 'Dr. M. Sankaran' }}</div>
          <div class="div-head-designation">{{ division_head.designation ?: 'Principal Scientist & Head' }}</div>
          <div class="div-head-contact">
            Email: {{ division_head.email ?: 'fruits[dot]iihr[at]icar[dot]gov[dot]in' }}<br>
            Phone: {{ division_head.phone ?: '080-23086100 (Extn:297)' }}
          </div>
        </div>
      </div>
    </div>

    {# Other Divisions Panel #}
    <div class="div-sidebar-panel">
      <div class="div-sidebar-title">Other Divisions</div>
      <a href="#" class="div-related-link">Vegetable Crops <span class="div-link-arrow">›</span></a>
