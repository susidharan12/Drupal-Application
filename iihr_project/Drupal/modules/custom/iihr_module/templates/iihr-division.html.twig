  {# MAIN DIVISION CONTENT — all text driven from iihr_division node in Drupal admin #}
  <div class="div-content">

    {# About Section #}
    <h2 class="div-section-heading">About</h2>
    <div class="div-about-text">
      {{ division_content.about_text|raw }}
    </div>

    {# The Mandate — driven from division_mandates array #}
    <h2 class="div-section-heading">{{ division_content.mandate_heading ?: 'The Mandate' }}</h2>
    <div class="div-mandate-container">
      <div class="div-mandate-grid">
        {% for mandate in division_mandates %}
        <div class="div-mandate-card">
          <div class="div-mandate-icon">
            <img src="{{ mandate.icon_url }}" alt="">
          </div>
          <p>{{ mandate.text }}</p>
        </div>
        {% endfor %}
      </div>
    </div>

    {# Thrust Areas — driven from division_content.thrust_areas #}
    <h2 class="div-section-heading">Thrust Areas</h2>
    <ul class="div-thrust-list">
      {% for area in division_content.thrust_areas %}
        <li>{{ area }}</li>
      {% endfor %}
    </ul>

    {# Field Gene Bank Stats — driven from division_genbank array #}
    <h2 class="div-section-heading div-genbank-heading">
      {{ division_content.genbank_heading ?: "Field Gene Bank' Collections at Present" }}
      <span class="div-genbank-live-dot"></span>
    </h2>
    <div class="div-genbank-grid">
      {% for item in division_genbank %}
      <div class="div-genbank-box gb-{{ item.key }}">
        <div class="div-genbank-num">{{ item.count }}</div>
        <div class="div-genbank-label">{{ item.label }}</div>
      </div>
      {% endfor %}
    </div>

    {# Mother Plants Field Gene Bank #}
    <h2 class="div-section-heading">Mother Plants Field Gene Bank</h2>
    <p class="div-mother-bank-text">
      {{ division_content.mother_bank_text ?: 'The Division maintains mother banks of all released varieties in an area about 20 acres for multiplication purpose.' }}
    </p>

    {# Project Buttons — driven from division_content.project_links #}
    <div class="div-proj-btns">
      <a href="#" class="div-proj-btn">
        Institute Projects
        <span class="div-proj-btn-icon">
          <img src="https://img.icons8.com/ios-filled/50/ffffff/table.png" alt="">
        </span>
      </a>
      <a href="#" class="div-proj-btn">
        Externally Funded Project
        <span class="div-proj-btn-icon">
          <img src="https://img.icons8.com/ios-filled/50/ffffff/table.png" alt="">
        </span>
      </a>
      <a href="#" class="div-proj-btn">
        Varieties
        <span class="div-proj-btn-icon">
          <img src="https://img.icons8.com/ios-filled/50/ffffff/table.png" alt="">
        </span>
      </a>
      <a href="#" class="div-proj-btn">
        Technologies
        <span class="div-proj-btn-icon">
          <img src="https://img.icons8.com/ios-filled/50/ffffff/table.png" alt="">
        </span>
      </a>
    </div>

  </div>
</div>

