{# TICKER — dynamic from iihr_ticker content type #}
<div class="tkr">
  <div class="tkr-lbl">WHATS NEW ?</div>
  <div class="tkr-wrap">
    <div class="tkr-inner">
      {% if ticker_items %}
        {% for item in ticker_items %}
          <span>{{ item }}</span>
        {% endfor %}
      {% else %}
        <span>Welcome to ICAR-IIHR — Indian Institute of Horticulture Research, Bengaluru</span>
        <span>Advancing horticulture research for a sustainable future</span>
      {% endif %}
    </div>
  </div>
  <div style="display:flex;gap:15px;padding:0 15px;flex-shrink:0">
    <a href="#" style="color:var(--gold);font-size:12px;font-weight:700">Read Now</a>
    <a href="#" style="color:var(--gold);font-size:12px;font-weight:700">See Now</a>
  </div>
</div>

{# PAGE HERO BANNER — change page-hero--about to page-hero--<key> to swap the image #}
<div class="page-hero page-hero--about">
  <div class="page-hero-text">
    <h1>About IIHR</h1>
    <div class="breadcrumb">

      <span>About IIHR</span>
    </div>
  </div>
</div>   {# /.page-hero #}

{# MAIN ABOUT LAYOUT #}
<div class="about-layout" id="main-content">

  {# SIDEBAR #}
  <aside>
    <div class="about-sidebar">
      <div class="side-nav">
        <a href="#" class="active">About Us <span>›</span></a>

      </div>
    </div>
  </aside>

  {# ABOUT CONTENT — all text driven from iihr_about_content node in Drupal admin #}
  <div class="about-content">

    <div class="intro-section">
      <div class="intro-text">
        <h2>{{ about_content.intro_heading }}</h2>
        {{ about_content.intro_text|raw }}
      </div>
      <img src="{{ about_content.intro_image }}" alt="IIHR Campus" class="intro-img">
    </div>

    <h3>History and Growth</h3>
    {{ about_content.history_text|raw }}

    <h3>Core of IIHR</h3>
    {{ about_content.core_text|raw }}

    <h3>{{ about_content.mandate_heading }}</h3>
    {# Mandate cards — each driven from an iihr_mandate node in Drupal admin #}
    <div class="mandate-grid">
      {% for card in mandate_items %}
        <div class="mandate-card">
          <div class="icon"><img src="{{ card.icon_url }}" alt="" style="width:28px;height:28px"></div>
          <p>{{ card.text }}</p>
        </div>
      {% endfor %}
    </div>

    {% if about_content.award_text %}
      <br>
      <p style="font-size:13px;color:#666;font-style:italic">{{ about_content.award_text }}</p>
    {% endif %}

  </div>
</div>

{# PARTNER LOGOS — driven from iihr_partner nodes in Drupal admin #}
<div class="partner-logos">
  <div class="partner-logos-inner">
    {% for logo in partner_logos %}
      <img src="{{ logo.image_url }}" alt="{{ logo.name }}">
    {% endfor %}
  </div>
</div>

