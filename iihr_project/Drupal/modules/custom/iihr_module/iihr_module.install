  _iihr_create_director_type();
  _iihr_create_spotlight_type();
  _iihr_create_research_prog_type();
  _iihr_create_partner_type();
  _iihr_create_about_content_type();
  _iihr_create_mandate_type();
  _iihr_create_division_type();
  _iihr_create_division_mandate_type();
  _iihr_create_division_head_type();
  _iihr_create_genbank_type();

