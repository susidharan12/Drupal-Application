/* ═══════════════════════════════════════════════════════════════════════════
   16. iihr_genbank — Field Gene Bank collection stat boxes
   ═══════════════════════════════════════════════════════════════════════════ */

function _iihr_create_genbank_type() {
  _iihr_node_type('iihr_genbank', 'IIHR Gene Bank Stat',
    'One coloured stat box in the "Field Gene Bank Collections" row on a Division page. Title = crop label (e.g. Mango). Set the CSS key to match the colour class (mango, pomegranate, grapes, jackfruit, dragon).');

  _iihr_field('iihr_genbank', 'field_div_key',    'string',  'Division Key (e.g. fruit_crops)',
    ['max_length' => 100]);
  _iihr_field('iihr_genbank', 'field_gb_css_key', 'string',  'CSS Colour Key (mango / pomegranate / grapes / jackfruit / dragon)',
    ['max_length' => 50]);
  _iihr_field('iihr_genbank', 'field_gb_count',   'string',  'Collection Count (number to display)',
    ['max_length' => 20]);
  _iihr_field('iihr_genbank', 'field_gb_weight',  'integer', 'Sort Order (lower = first, left to right)');

  _iihr_form_display('iihr_genbank', [
    ['name' => 'field_div_key',    'widget' => 'string_textfield'],
    ['name' => 'field_gb_css_key', 'widget' => 'string_textfield'],
    ['name' => 'field_gb_count',   'widget' => 'string_textfield'],
    ['name' => 'field_gb_weight',  'widget' => 'number'],
  ]);
}
